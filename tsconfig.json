{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.app.json",
    "compilerOptions": {
        "isolatedModules": false,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ]
        }
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "test/fixtures"
    ]
}